theme = "everforest_light"


[editor]
bufferline = "multiple"
idle-timeout = 0
undercurl = true
true-color = true
soft-wrap = { enable = true }

{{ if .helix.tree_sitter_path }}
[editor.statusline]
center = ["tree-sitter-path"]
{{ end }}


[editor.file-picker]
git-exclude = false
git-global = false
hidden = false

[keys.normal]
esc = ["collapse_selection", "keep_primary_selection"]
Z = { Z = [":write-quit"]}

[keys.normal.space]
F = "file_picker"
f = "file_picker_in_current_directory"
l = ":pipe-to xargs -I % tmux send-keys -t 1 \"%\" Enter"
o = { l = ":open ~/.config/helix/languages.toml", c = ":config-open" }
w = { x = ":quit-all!" }
{{ if .helix.use_eslint }}
e = { f = ":eslint-fix-all" }
{{ end }}

[keys.normal.space.t]
h = ":toggle-option lsp.display-inlay-hints"
{{ if .helix.has_copilot_pr }}
e = ":toggle-option lsp.inline-diagnostics.enabled"

[keys.normal.space.t.l]
e = ":set-option lsp.inline-diagnostics.other-lines error"
w = ":set-option lsp.inline-diagnostics.other-lines warning"
i = ":set-option lsp.inline-diagnostics.other-lines info"
h = ":set-option lsp.inline-diagnostics.other-lines hint"
{{ end }}


{{ if .helix.has_copilot_pr }}
"C-e" = "show_or_next_copilot_completion"
"C-a" = "hide_or_prev_copilot_completion"
"C-y" = "apply_copilot_completion"
# Tab will conflict with lsp auto-complete suggestions
# "tab" = "apply_copilot_completion"
{{ end }}


[editor.lsp]
display-inlay-hints = true
{{ if .helix.has_copilot_pr }}
copilot-auto = true
{{ end }}

{{ if .helix.has_copilot_pr }}
[editor.lsp.inline-diagnostics]
enabled = true
other-lines = "error"
{{ end }}


[editor.whitespace.render]
space = "all"
tab = "all"
newline = "none"


[editor.cursor-shape]
insert = "bar"
